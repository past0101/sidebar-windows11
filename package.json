{
  "name": "windows-sidebar",
  "version": "1.0.0",
  "description": "Windows Sidebar By WebAlly - Modern transparent sidebar for Windows 11",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [
    "sidebar",
    "windows11",
    "shortcuts",
    "launcher",
    "webally"
  ],
  "author": "WebAlly - past0101",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.webally.sidebar.windows11",
    "productName": "Windows Sidebar By WebAlly",
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true
    }
  },
  "dependencies": {
    "windows-shortcuts": "^0.1.6"
  }
}
