{
  "name": "windows-sidebar",
  "version": "1.0.0",
  "description": "Windows Sidebar By WebAlly - Modern transparent sidebar for Windows 11",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder",
    "package": "electron-packager . \"Windows Sidebar By WebAlly\" --platform=win32 --arch=x64 --out=dist --overwrite"
  },
  "keywords": [
    "sidebar",
    "windows11",
    "shortcuts",
    "launcher",
    "webally"
  ],
  "author": "WebAlly - past0101",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.webally.sidebar.windows11",
    "productName": "Windows Sidebar By WebAlly",
    "win": {
      "target": [
        "portable",
        "zip"
      ]
    }
  },
  "dependencies": {
    "windows-shortcuts": "^0.1.6"
  }
}
